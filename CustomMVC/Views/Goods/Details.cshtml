@model Good

@{
    ViewData["Title"] = "Инфо";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Информация</h1>

<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название товара
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Тип товара
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GoodType.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.GoodId">Редактировать</a> |
    <a asp-action="Index">Назад</a>
</div>
